@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Zoomsocks.WebUI.ViewModels.ProductCategoryViewModel

<h3>Create Product Category</h3>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information</h3>
    </div>
    <form action="/Admin/ProductCategory/Create" method="post" id="poduct-category-create-form">
        <div class="box-body">
            <div class="form-group">
                <label for="ProductCategory_Name">@Html.LabelFor(m => m.Name)</label>
                <input type="text" class="form-control" name="name" id="product-category-name" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="ProductCategory_Alias">@Html.LabelFor(m => m.Alias)</label>
                <input type="text" class="form-control" name="alias" id="product-category-alias" readonly>
            </div>
            <div class="form-group">
                <label for="ProductCategory_DisplayOrder">@Html.LabelFor(m => m.DisplayOrder)</label>
                <input type="number" class="form-control" name="displayorder" id="product-category-display-order">
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section js{
    <script src="~/frontend/js/product-category-create.js"></script>
}
