@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using Zoomsocks.WebUI.ViewModels
@model IEnumerable<ProductCategoryViewModel>

<h3>Product Category Management</h3>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Product Categories</h3>
                <a class="btn btn-success btn-right" id="btn-create">
                    <i class="fa fa-plus"></i> Create
                </a>
            </div>
            <div class="box-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="product-category-data"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script id="template-product-category" type="x-tmpl-mustache">
    <tr>
        <td>{{Name}}</td>
        <td>
            <a class="btn btn-danger btn-sm btn-delete-product-category" onclick="registerDeleteButtonOnClickedEvent('{{Id}}', '{{Name}}')"><i class="fa fa-trash"></i></a>
            <a class="btn btn-primary btn-sm btn-edit-product-category" onclick="registerEditButtonOnClickedEvent('{{Id}}')"><i class="fa fa-pencil"></i></a>
        </td>
    </tr>
</script>

@section js{
    <script src="~/frontend/admin/js/features/product-category.js"></script>
}
