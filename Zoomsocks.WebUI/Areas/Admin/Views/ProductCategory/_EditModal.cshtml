@model Zoomsocks.WebUI.ViewModels.ProductCategoryViewModel

<div class="modal fade" id="edit-product-category-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Ajax.BeginForm("Edit", "ProductCategory", null, new AjaxOptions()
            {
                HttpMethod = "POST",              
            }, new { @id = "editForm", enctype = "multipart/form-data" }))
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="confirm-delete-question">Edit product category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>               
                <div class="modal-body">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "product-category-name" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Alias, new { @class = "col-form-label" })
                        @Html.TextBoxFor(m => m.Alias, new { @class = "form-control", @id = "product-category-alias", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DisplayOrder, new { @class = "col-form-label" })
                        @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control", @id = "product-category-display-order", @type = "number" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>
    </div>
</div>