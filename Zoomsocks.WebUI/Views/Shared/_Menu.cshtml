@model IEnumerable<Zoomsocks.WebUI.ViewModels.ProductCategoryViewModel>
<header class="header-v3">
    <div class="container-menu-desktop trans-03">
        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop p-l-45">
                <a href="/" class="logo">
                    <img src="/frontend/zoomsocks/images/icons/logo-02.png" alt="IMG-LOGO">
                </a>
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li>
                            <a href="/about-us">About Us</a>
                        </li>
                        <li class="label1" data-label1="hot">
                            <a href="javascript:void(0)">Categories</a>
                            <ul class="sub-menu">
                                @foreach (var category in Model)
                                {
                                    <li>
                                        <a href="/category/@category.Alias">@category.Name</a>
                                    </li>
                                }
                            </ul>
                        </li>

                        <li>
                            <a href="product.html">Team Order</a>
                        </li>

                        <li>
                            <a href="contact.html">Contact</a>
                        </li>
                    </ul>
                </div>
                @*<div class="wrap-icon-header flex-w flex-r-m h-full">
                    <div class="flex-c-m h-full p-r-25 bor6">

                    </div>

                    <div class="flex-c-m h-full p-lr-19">
                        <div class="icon-header-item cl0 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
                            <i class="zmdi zmdi-menu"></i>
                        </div>
                    </div>
                </div>*@
            </nav>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a href="index.html"><img src="/frontend/zoomsocks/images/icons/logo-01.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
            <div class="flex-c-m h-full p-r-5">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="2">
                    <i class="zmdi zmdi-shopping-cart"></i>
                </div>
            </div>
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="main-menu-m">
            <li>
                <a href="/about-us">About Us</a>                              
            </li>

            <li>
                <a href="javascript:void(0)" class="label1 rs1" data-label1="hot">Categories</a>
                <span class="arrow-main-menu-m">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </span>
                <ul class="sub-menu-m">
                    @foreach (var category in Model)
                    {
                        <li><a href="#">@category.Name</a></li>
                    }
                </ul>
            </li>

            <li>
                <a href="#">Team Customized Order</a>
            </li>

            <li>
                <a href="#">Contact</a>
            </li>         
        </ul>
    </div>
</header>